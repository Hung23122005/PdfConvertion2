<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>PDF to Word Converter - Web Worker Version</display-name>

    <!-- 1. Upload + chạy ngầm -->
    
    <!-- Chạy cleanup khi server khởi động -->
	<servlet>
    	<servlet-name>StartupServlet</servlet-name>
    	<servlet-class>controller.StartupServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
	</servlet>
    
    <servlet>
        <servlet-name>ConverterAsyncServlet</servlet-name>
        <servlet-class>controller.ConverterAsyncServlet</servlet-class>
        <!-- ĐÃ XÓA <multipart-config> Ở ĐÂY → ĐỂ ANNOTATION TRONG JAVA QUẢN LÝ -->
    </servlet>
    <servlet-mapping>
        <servlet-name>ConverterAsyncServlet</servlet-name>
        <url-pattern>/convert</url-pattern>
    </servlet-mapping>

    <!-- Các servlet khác giữ nguyên -->
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>controller.StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>controller.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListConvertServlet</servlet-name>
        <servlet-class>controller.ListConvertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListConvertServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>