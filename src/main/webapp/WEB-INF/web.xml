<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>PDF to Word Converter - Web Worker Version</display-name>

    <!-- ==================== TẤT CẢ SERVLET ĐỀU DÙNG WEB.XML ==================== -->

    <!-- 1. Upload + chạy ngầm (Web Worker gọi) -->
    <servlet>
        <servlet-name>ConverterAsyncServlet</servlet-name>
        <servlet-class>controller.ConverterAsyncServlet</servlet-class>
        <multipart-config>
            <max-file-size>104857600</max-file-size>      <!-- 100MB -->
            <max-request-size>104857600</max-request-size>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConverterAsyncServlet</servlet-name>
        <url-pattern>/convert</url-pattern>   <!-- Dùng /convert cho đẹp -->
    </servlet-mapping>

    <!-- 2. Kiểm tra trạng thái convert (polling) -->
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>controller.StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <!-- 3. Tải file Word khi xong -->
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>controller.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <!-- 4. Đăng nhập / Đăng ký -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 5. Xem danh sách file đã convert -->
    <servlet>
        <servlet-name>ListConvertServlet</servlet-name>
        <servlet-class>controller.ListConvertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListConvertServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <!-- Trang chủ + JSP -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>